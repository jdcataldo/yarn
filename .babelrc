{
  "only": "*.js",
  "env": {
    "pre-node5": {
      "presets": ["es2015-node4"],
      "plugins": [
        ["array-includes"],
        ["transform-inline-imports-commonjs"],
        ["transform-runtime", { "polyfill": true, "regenerator": false }]
      ]
    },
    "test": {
      "presets": ["es2015-node4"],
      "plugins": [
        ["transform-inline-imports-commonjs"]
      ]
    }
  },
  "presets": [
    ["env", {
      "targets": {
        "node": "current"
      },
      "loose": true
    }],
    "flow",
    "stage-0"
  ],
  "plugins": [
    ["transform-inline-imports-commonjs"],
    ["transform-runtime", { "polyfill": false, "regenerator": true }]
  ]
}
